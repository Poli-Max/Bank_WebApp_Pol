@model Mod

@{
    ViewData["Title"] = "Пополнение";
}

<div class="text-left">
    <h1 class="display-10">Пополнение счета</h1>
</div>
<form method="post" asp-controller="Replenishment" asp-action="Card">
    <label asp-for="User.ID"></label>
    <input asp-for="User.ID" />
    <span asp-validation-for="User.ID"></span>

    <label asp-for="Dop.Amount"></label>
    <input asp-for="Dop.Amount" />
    <span asp-validation-for="Dop.Amount"></span>


    <input type="submit" value="Пополнить" />
</form>
